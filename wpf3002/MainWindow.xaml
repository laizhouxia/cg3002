<Window x:Class="wpf3002.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="768" Width="1366"
        Loaded="Window_Loaded">
    <Grid>
        <!--<TextBox Name="textBoxUI" HorizontalAlignment="Left" Height="681" 
                    Margin="760,24,0,0" TextWrapping="Wrap" Text="TextBox" 
                    VerticalAlignment="Top" Width="544"/>-->
        <ListView Name="ListViewPriceList" ItemsSource="{Binding Path=allItems}" HorizontalAlignment="Left" Height="681" Margin="691,28,0,0" VerticalAlignment="Top" Width="640">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding name}"/>
                        <TextBlock Grid.Column="1" Text="{Binding barcode}"/>
                        <TextBlock Grid.Column="2" Text="{Binding daily_price}"/>
                        <TextBlock Grid.Column="3" Text="{Binding current_stock}"/>
                        <TextBlock Grid.Column="4" Text="{Binding minimum_stock}"/>
                        <TextBlock Grid.Column="5" Text="{Binding bundle_unit}"/>
                        <TextBlock Grid.Column="6" Text="{Binding category}"/>
                        <TextBlock Grid.Column="7" Text="{Binding manufacturer}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <!--<ListView.View>
                <GridView>
                    
                    <GridViewColumn Header="name" DisplayMemberBinding="{Binding Path=name}"/>

                    <GridViewColumn Header="barcode" DisplayMemberBinding="{Binding barcode}"/>

                    <GridViewColumn Header="daily_price" DisplayMemberBinding="{Binding daily_price}"/>

                    <GridViewColumn Header="current_stock" DisplayMemberBinding="{Binding current_stock}"/>
                </GridView>
            </ListView.View>-->
        </ListView>
    </Grid>
</Window>
